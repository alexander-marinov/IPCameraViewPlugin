<?xml version="1.0" encoding="UTF-8"?>
 <plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
       xmlns:android="http://schemas.android.com/apk/res/android"
       id="cordova-plugin-ipcamview"
       version="1.0.0">      
   <name>IPCamView</name>

   <description>
       IP camera viewer
   </description>

   <author>Sciant Ltd.</author>
   
   <keywords>rtsp, h.264, ipcam</keywords>

   <asset src="www/ipcamview.js" target="js/ipcamview.js"/>
   
   <engines>
       <engine name="cordova" version=">=3.0.0"/>
   </engines>

   <js-module src="www/ipcamview.js" name="ipcamview">
       <clobbers target="ipcamview" />
   </js-module>

   <!-- android -->
   <platform name="android">
       <config-file target="res/xml/config.xml" parent="/*">
           <feature name="IPCamView">
               <param name="android-package" value="com.sciant.ipcamplugin.IPCamView" />
           </feature>
       </config-file>
	   
	   <config-file target="AndroidManifest.xml" parent="/manifest/application">
			<activity
				android:name="com.sciant.ipcamplugin.IPCamPlayer"
				android:label="IPCamPlayer">
			</activity>
       </config-file>
	   
	   <config-file target="AndroidManifest.xml" parent="/manifest">
			<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
			<uses-permission android:name="android.permission.CAPTURE_AUDIO_OUTPUT"/>
			<uses-permission android:name="android.permission.RECORD_AUDIO"/>
			<uses-permission android:name="android.permission.INTERNET"/>
       </config-file>
	   
       <source-file src="src/android/com/sciant/ipcamplugin/IPCamView.java" target-dir="src/com/sciant/ipcamplugin"/>
	   <source-file src="src/android/com/sciant/ipcamplugin/IPCamPlayer.java" target-dir="src/com/sciant/ipcamplugin"/>
	   <!-- add the otheer source files here -->
   </platform>      
  </plugin>      